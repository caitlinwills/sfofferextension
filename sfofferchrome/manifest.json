{
	"manifest_version": 2,

	"name": "Hello World",
	"description": "A simple page-scraping extension for Chrome",
	"version": "1.0",
	"author": "@cwills",
	"icons": {
		"128": "icon128.png",
		"48": "icon48.png",
		"16": "icon16.png",
	}

	"background": {
		"scripts": ["popup.js"],
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ],
	"browser_action": {
		"default_icon": "logo.png",
		"default_popup": "popup.html"
	}
}